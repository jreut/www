#!/bin/sh

src="$JOURNAL_PATH"
dest=./src/journal

if [ -z "$src" ]; then
  echo "I require JOURNAL_PATH to be set"
  exit 1
else
  echo "Using JOURNAL_PATH=$JOURNAL_PATH"
fi

rm -r "$dest"
mkdir "$dest"

for markdown in "$src"/*.md; do
  base=$(basename "$markdown" md)
  pandoc --to html --smart --standalone "$markdown" > "$dest/${base}html"
done
